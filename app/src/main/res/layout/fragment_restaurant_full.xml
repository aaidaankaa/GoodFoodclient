<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RestaurantFullFragment"
    android:orientation="vertical"
>

     <ImageView
          android:id="@+id/imageRestaurant"
         android:layout_width="match_parent"
         android:layout_height="200dp"
          android:layout_centerHorizontal="true"
         android:layout_alignParentTop="true"
          tools:src="@drawable/cafe"/>

     <com.google.android.material.textfield.TextInputLayout

         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="@string/quantity"
         android:layout_marginTop="10dp"
         android:textColorHint="@color/black">
        <com.google.android.material.textfield.TextInputEditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/appetite_italic"
              android:textColorHint="@color/black"
              android:layout_marginTop="32dp"
              android:layout_marginStart="32dp"
              android:layout_marginEnd="32dp"
              android:drawableStart="@drawable/group"
              android:drawablePadding="12dp"
            android:inputType="number"/>
     </com.google.android.material.textfield.TextInputLayout>
     <com.google.android.material.textfield.TextInputLayout
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="@string/date"
         android:layout_marginTop="10dp"
         android:textColorHint="@color/black">
        <com.google.android.material.textfield.TextInputEditText

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/appetite_italic"
              android:textColorHint="@color/black"
              android:layout_marginTop="32dp"
              android:layout_marginStart="32dp"
              android:layout_marginEnd="32dp"
              android:drawableStart="@drawable/e"
              android:drawablePadding="12dp"
            android:inputType="date"
            />

     </com.google.android.material.textfield.TextInputLayout>

     <com.google.android.material.textfield.TextInputLayout
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="@string/time"
         android:layout_marginTop="10dp"
         android:textColorHint="@color/black">

          <com.google.android.material.textfield.TextInputEditText

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="32dp"
              android:layout_marginTop="32dp"
              android:layout_marginEnd="32dp"
              android:drawableStart="@drawable/t"
              android:drawablePadding="12dp"
              android:fontFamily="@font/appetite_italic"
              android:inputType="datetime"
              android:textColorHint="@color/black" />


     </com.google.android.material.textfield.TextInputLayout>



     <Button
         android:id="@+id/booking"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:layout_below="@+id/editData"
          android:textColor="@color/black"
          android:text="Забронировать"
          android:background="@drawable/button"
         android:layout_margin="20dp"
          android:layout_centerHorizontal="true"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:fontFamily="@font/appetite_italic"
          android:textSize="20dp"
          android:text="@string/order"
          />
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:hint="@string/food"/>

     <com.google.android.material.textfield.TextInputLayout
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="@string/payment"
         android:layout_marginTop="10dp"
         android:textColorHint="@color/black">
          <com.google.android.material.textfield.TextInputEditText

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/appetite_italic"
              android:textColorHint="@color/black"
              android:layout_marginTop="32dp"
              android:layout_marginStart="32dp"
              android:layout_marginEnd="32dp"
              android:drawableStart="@drawable/pay"
              android:drawablePadding="12dp"
              android:inputType="number"
              />

     </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>